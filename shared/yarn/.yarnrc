# Yarn Classic (v1) Configuration
# For Yarn v2+, use .yarnrc.yml instead

# ===== PACKAGE METADATA =====

# Save exact versions (not ^ or ~)
save-prefix ""

# ===== DISPLAY =====

# Show progress bar
progress-bar true

# Emoji in output
emoji true

# ===== REGISTRY =====

# Registry URL
registry "https://registry.npmjs.org/"

# ===== CACHE =====

# Cache folder
# Default: ~/.yarn/cache
# cache-folder ~/.yarn/cache

# ===== NETWORK =====

# Network timeout (ms)
network-timeout 60000

# ===== LOCKFILE =====

# Ignore optional dependencies in lockfile
ignore-optional false

# ===== SCRIPTS =====

# Ignore scripts during install (for security)
# ignore-scripts false

# ===== VERSION =====

# Git tag version prefix
version-tag-prefix "v"

# Git commit message
version-git-message "Release v%s"

# ===== WORKSPACES =====

# Enable workspaces (for monorepos)
# workspaces-experimental false

# ===== OFFLINE =====

# Prefer offline mode (use cache)
# prefer-offline false

# ===== STRICT =====

# Strict semver
# strict-semver false

# ===== MISCELLANEOUS =====

# Disable self-update notifications
disable-self-update-check true

# Init defaults
init-license "MIT"
init-version "0.1.0"