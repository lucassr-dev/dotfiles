{
  // ═══════════════════════════════════════════════════════════
  // EDITOR - Fonte e Aparência
  // ═══════════════════════════════════════════════════════════
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.tabSize": 2,
  "editor.fontLigatures": true,
  "editor.cursorBlinking": "expand",
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [80, 120],
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.stickyScroll.enabled": false,
  "editor.accessibilitySupport": "off",

  // ═══════════════════════════════════════════════════════════
  // EDITOR - Comportamento
  // ═══════════════════════════════════════════════════════════
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.parameterHints.enabled": false,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.semanticHighlighting.enabled": false,
  "editor.find.seedSearchStringFromSelection": "always",
  "editor.formatOnSave": true,

  // ═══════════════════════════════════════════════════════════
  // EDITOR - Code Actions ao Salvar
  // ═══════════════════════════════════════════════════════════
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  // ═══════════════════════════════════════════════════════════
  // WORKBENCH - Tema e Aparência
  // ═══════════════════════════════════════════════════════════
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.editor.empty.hint": "hidden",
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "default",
  "workbench.statusBar.visible": true,
  "workbench.layoutControl.enabled": false,
  "workbench.tree.enableStickyScroll": false,
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "window.commandCenter": false,
  "window.titleBarStyle": "native",
  "window.newWindowDimensions": "maximized",
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Omni",
  "workbench.preferredLightColorTheme": "Dracula Theme",
  "breadcrumbs.enabled": false,

  // ═══════════════════════════════════════════════════════════
  // TERMINAL - Configuração Cross-Platform
  // ═══════════════════════════════════════════════════════════
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.showExitAlert": false,
  "terminal.explorerKind": "both",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.linux": {
    "bash": { "path": "bash", "icon": "terminal-bash" },
    "zsh": { "path": "zsh", "icon": "terminal" },
    "fish": { "path": "fish", "icon": "terminal" }
  },
  "terminal.integrated.profiles.osx": {
    "bash": { "path": "bash", "icon": "terminal-bash" },
    "zsh": { "path": "zsh", "icon": "terminal" },
    "fish": { "path": "fish", "icon": "terminal" }
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": { "path": "pwsh", "icon": "terminal-powershell" },
    "Command Prompt": { "path": "cmd", "icon": "terminal-cmd" },
    "Git Bash": { "path": "C:\\Program Files\\Git\\bin\\bash.exe", "icon": "terminal-bash" }
  },
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "Q_NEW_SESSION": "1"
  },
  "terminal.integrated.env.linux": {},
  "terminal.integrated.env.windows": {},

  // ═══════════════════════════════════════════════════════════
  // EXPLORER - Arquivos e Pastas
  // ═══════════════════════════════════════════════════════════
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, .prettier*, tsconfig*, vite*, pnpm-*, bun.lockb, nest*, package-lock*, yarn.lock, .npmrc",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*",
    "tsconfig.json": "tsconfig*.json"
  },

  // ═══════════════════════════════════════════════════════════
  // FILES - Exclusões e Associações
  // ═══════════════════════════════════════════════════════════
  "files.defaultLanguage": "markdown",
  "files.associations": {
    ".env.*": "dotenv",
    ".prettierrc": "json",
    "*.css": "css",
    ".dev.vars": "dotenv",
    ".gitconfig*": "ini"
  },
  "files.exclude": {
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.hg": true,
    "**/.svn": true,
    "**/.git": true,
    ".vscode": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/storage": true,
    "package-lock.json": true,
    "yarn.lock": true,
    "pnpm-lock.yaml": true,
    "**/*.code-search": true,
    "**/.ruby-lsp": true
  },

  // ═══════════════════════════════════════════════════════════
  // JAVASCRIPT / TYPESCRIPT
  // ═══════════════════════════════════════════════════════════
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.tsserver.log": "off",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ═══════════════════════════════════════════════════════════
  // JSON
  // ═══════════════════════════════════════════════════════════
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },

  // ═══════════════════════════════════════════════════════════
  // PRISMA
  // ═══════════════════════════════════════════════════════════
  "[prisma]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Prisma.prisma"
  },

  // ═══════════════════════════════════════════════════════════
  // EMMET - JSX/MDX Support
  // ═══════════════════════════════════════════════════════════
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "mdx": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "mdx": "jsx"
  },

  // ═══════════════════════════════════════════════════════════
  // ESLINT
  // ═══════════════════════════════════════════════════════════
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "graphql"
  ],

  // ═══════════════════════════════════════════════════════════
  // TAILWIND CSS
  // ═══════════════════════════════════════════════════════════
  "tailwindCSS.experimental.classRegex": [
    ["tv\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    "class:\\s*?[\"'`]([^\"'`]*).*?,"
  ],

  // ═══════════════════════════════════════════════════════════
  // GIT
  // ═══════════════════════════════════════════════════════════
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.advanced.messages": {
    "suppressIntegrationRequestTimedOutWarning": true
  },

  // ═══════════════════════════════════════════════════════════
  // GITHUB COPILOT
  // ═══════════════════════════════════════════════════════════
  "github.copilot.nextEditSuggestions.enabled": true,

  // ═══════════════════════════════════════════════════════════
  // PHP (INTELEPHENSE)
  // ═══════════════════════════════════════════════════════════
  "intelephense.format.enable": true,
  "intelephense.completion.triggerParameterHints": true,
  "intelephense.completion.fullyQualifyGlobalConstantsAndFunctions": true,
  "intelephense.completion.insertUseDeclaration": true,

  // ═══════════════════════════════════════════════════════════
  // SPELL CHECKER
  // ═══════════════════════════════════════════════════════════
  "cSpell.language": "en,pt,pt_BR",
  "cSpell.userWords": [
    "automations",
    "bootcamp",
    "chakra",
    "checkin",
    "checkins",
    "cloudflare",
    "clsx",
    "codegen",
    "datadog",
    "datetime",
    "dayjs",
    "dotenv",
    "elysia",
    "esbuild",
    "fastify",
    "hono",
    "middlewares",
    "mixpanel",
    "nestjs",
    "nivo",
    "omni",
    "postgres",
    "postgresql",
    "prefetch",
    "prisma",
    "reactflow",
    "rocketseat",
    "shiki",
    "sqlite",
    "supergraph",
    "svgr",
    "tailwindcss",
    "tiptap",
    "trpc",
    "tsup",
    "upsert",
    "vitest",
    "zod"
  ],

  // ═══════════════════════════════════════════════════════════
  // SYMBOLS (File Icons)
  // ═══════════════════════════════════════════════════════════
  "symbols.files.associations": {
    "*.module.ts": "nest",
    "*.guard.ts": "typescript",
    "*.spec.ts": "ts-test",
    "*.e2e-spec.ts": "ts-test",
    "*.mock.ts": "ts-test",
    "vitest.config.e2e.ts": "vite",
    ".env.development.local": "gear",
    ".env.test.local": "gear",
    ".env.local": "gear",
    ".env.example": "gear"
  },
  "symbols.hidesExplorerArrows": false,

  // ═══════════════════════════════════════════════════════════
  // APC (Customize UI) - Cross-Platform
  // ═══════════════════════════════════════════════════════════
  "apc.activityBar": {
    "position": "bottom",
    "hideSettings": true,
    "size": 48,
    "itemMargin": 8,
    "itemSize": 32
  },
  "apc.header": {
    "height": 36
  },
  "apc.listRow": {
    "height": 24
  },
  "apc.font.family": "JetBrains Mono",
  "apc.stylesheet": {
    ".title-label > h2": "display: none",
    ".editor-actions": "display: none",
    ".nosidebar .inline-tabs-placeholder": "width: 75px",
    ".pane-header": "padding: 0 8px",
    ".pane-body": "padding: 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },

  // ═══════════════════════════════════════════════════════════
  // SEGURANÇA E UPDATES
  // ═══════════════════════════════════════════════════════════
  "security.workspace.trust.untrustedFiles": "newWindow",
  "security.promptForLocalFileProtocolHandling": false,
  "update.mode": "manual",
  "update.showReleaseNotes": false,
  "extensions.ignoreRecommendations": true,

  // ═══════════════════════════════════════════════════════════
  // EXTENSÕES ESPECÍFICAS
  // ═══════════════════════════════════════════════════════════
  "console-ninja.featureSet": "Community",
  "liveServer.settings.donotShowInfoMsg": true,
  "vsicons.dontShowNewVersionMessage": true,
  "remote.WSL.fileWatcher.polling": true,
  "claudeCode.preferredLocation": "panel",

  // ═══════════════════════════════════════════════════════════
  // COLOR CUSTOMIZATIONS
  // ═══════════════════════════════════════════════════════════
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  }
}
