{
  "_comment": "Zed Editor Configuration - Catppuccin Mocha Theme + Web Development Focus",
  "theme": "Catppuccin Mocha",
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.4
  },
  "tab_size": 2,
  "hard_tabs": false,
  "preferred_line_length": 100,
  "soft_wrap": "preferred_line_length",
  "show_whitespaces": "selection",
  "remove_trailing_whitespace_on_save": true,
  "ensure_final_newline_on_save": true,
  "format_on_save": "on",
  "auto_save": "on_focus_change",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "vim_mode": true,
  "relative_line_numbers": true,
  "vim": {
    "use_system_clipboard": "always",
    "use_multiline_find": true,
    "use_smartcase_find": true
  },
  "scrollbar": {
    "show": "auto",
    "git_diff": true,
    "diagnostics": true,
    "selected_symbol": true,
    "cursors": true
  },
  "gutter": {
    "line_numbers": true,
    "code_actions": true,
    "folds": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true,
      "delay_ms": 600
    }
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": true,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "experimental": {
            "classRegex": [
              [
                "cva\\(([^)]*)\\)",
                "[\"'`]([^\"'`]*).*?[\"'`]"
              ],
              [
                "cx\\(([^)]*)\\)",
                "(?:'|\"|`)([^']*)(?:'|\"|`)"
              ]
            ]
          }
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JavaScript": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "TSX": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSX": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "JSON": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "CSS": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "SCSS": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "HTML": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Vue": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Svelte": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier"
    },
    "Markdown": {
      "tab_size": 2,
      "format_on_save": "on",
      "formatter": "prettier",
      "soft_wrap": "editor_width"
    },
    "YAML": {
      "tab_size": 2,
      "format_on_save": "on"
    },
    "Python": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Rust": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Go": {
      "tab_size": 4,
      "format_on_save": "on",
      "formatter": "language_server"
    }
  },
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile.*",
      "*.dockerfile"
    ],
    "JSON": [
      "*.json",
      "*.jsonc",
      ".eslintrc",
      ".prettierrc",
      "tsconfig.json"
    ],
    "TypeScript": [
      "*.ts"
    ],
    "TSX": [
      "*.tsx"
    ],
    "JavaScript": [
      "*.js",
      "*.mjs",
      "*.cjs"
    ],
    "JSX": [
      "*.jsx"
    ]
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 13,
    "line_height": "comfortable",
    "blinking": "terminal_controlled",
    "alternate_scroll": "on",
    "option_as_meta": false,
    "copy_on_select": false,
    "button": false,
    "env": {
      "TERM": "xterm-256color"
    }
  },
  "project_panel": {
    "button": true,
    "default_width": 240,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "diagnostics": {
    "include_warnings": true
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "collaboration_panel": {
    "button": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "features": {
    "copilot": true
  },
  "formatter": {
    "external": {
      "command": "prettier",
      "arguments": [
        "--stdin-filepath",
        "{buffer_path}"
      ]
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/bower_components",
    "**/dist",
    "**/build",
    "**/.next",
    "**/.nuxt",
    "**/.output",
    "**/.cache",
    "**/.parcel-cache",
    "**/.turbo",
    "**/coverage",
    "**/.nyc_output"
  ],
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-5-20251101"
    },
    "version": "2",
    "button": true,
    "dock": "right",
    "default_width": 640
  }
}